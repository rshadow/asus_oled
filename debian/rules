#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export DH_OPTIONS=-v

%:
	dh $@ --with dkms

override_dh_auto_install:
	
	
git-buildpackage:	
	git-buildpackage \
		--git-upstream-branch=upstream \
		--git-debian-branch=master \
		--git-ignore-new \
		--git-force-create \
		--git-upstream-tree=upstream
		
git-buildpackage-release:
	git-buildpackage \
		--git-upstream-branch=upstream \
		--git-debian-branch=master \
		--git-tag \
		--git-force-create \
		--git-upstream-tree=upstream
	make clean
	dh_clean
